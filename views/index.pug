html 
    head 
        title People
        link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css")
        script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js") 
        script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js") 
    body 
        div(class="container")
            h1 Event Links
            table(class="table-striped") 
                th People 
                each person in people 
                    tr 
                        td
                            a(href="/person/" + person.id)= person.name

            a(href="/people" class="btn btn-primary") Edit People
            br 
            table(class="table=striped") 
                th Events 
                each event in superEvents 
                    tr 
                        td
                            a(href="/superevent/" + event.id)= event.name

            a(href="/superevents" class="btn btn-primary") Edit Events
            br

            a(href="/event" class="btn btn-primary") Add Link 